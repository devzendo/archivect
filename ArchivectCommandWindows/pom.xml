<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.devzendo</groupId>
	<artifactId>ArchivectCommandWindows</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<name>ArchivectCommandWindows</name>
	<packaging>pom</packaging>
	<description>Windows launcher for the Archivect command line utility.
    (Apache License v2) 2010 Matt Gumbley, DevZendo.org</description>

	<parent>
		<groupId>org.devzendo</groupId>
		<artifactId>Archivect</artifactId>
		<version>0.1.0-SNAPSHOT</version>
	</parent>

    <properties>
        <appName>Archivect</appName>
    </properties>

	<profiles>
		<profile>
			<id>windows</id>
			<activation>
				<os>
					<family>Windows</family>
				</os>
			</activation>
			<build>
				<plugins>
					<!--
						Create the Windows launcher structure under target/windows.
					-->
					<plugin>
						<groupId>org.devzendo</groupId>
						<artifactId>CrossPlatformLauncherPlugin</artifactId>
						<version>0.2.1-SNAPSHOT</version>
						<configuration>
							<os>Windows</os>
							<applicationName>${appName}</applicationName>
							<mainClassName>org.devzendo.archivect.ArchivectMain</mainClassName>
							<narClassifierTypes>
								<param>x86-Windows-msvc:jni</param>
							</narClassifierTypes>
						</configuration>
						<executions>
							<execution>
								<id>createlauncher</id>
								<phase>package</phase>
								<goals>
									<goal>createlauncher</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile> <!--  Windows -->
	</profiles>

	<dependencies>
		<dependency>
			<groupId>org.devzendo</groupId>
			<artifactId>ArchivectCommand</artifactId>
			<version>0.1.0-SNAPSHOT</version>
			<type>nar</type>
		</dependency>
	</dependencies>
</project>
